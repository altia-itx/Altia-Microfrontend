{
  "name": "altia-microfrontend",
  "workspaces": [
    "./mf-app1",
    "./mf-app2"
  ],
  "description": "Basic Host and Remote Example",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "start": "npm-run-all --parallel start:mf-app1 start:mf-app2",
    "start:mf-app1": "cd mf-app1 && npm start",
    "start:mf-app2": "cd mf-app2 && npm start",
    "build": "npm-run-all --parallel build:mf-app1 build:mf-app2",
    "build:mf-app1": "cd mf-app1 && npm run build",
    "build:mf-app2": "cd mf-app2 && npm run build",
    "serve": "npm-run-all --parallel serve:mf-app1 serve:mf-app2",
    "serve:mf-app1": "cd mf-app1 && npm run serve",
    "serve:mf-app2": "cd mf-app2 && npm run serve",
    "clean": "npm-run-all --parallel clean:mf-app1 clean:mf-app2",
    "clean:mf-app1": "cd mf-app1 && npm run clean",
    "clean:mf-app2": "cd mf-app2 && npm run clean",
    "e2e:ci": "npm run build && npm run serve & sleep 60 && npx cypress run --config-file ../cypress-e2e/config/cypress.config.ts --config '{\"supportFile\": \"../cypress-e2e/support/e2e.ts\"}' --spec \"./e2e/*.cy.ts\" --browser=chrome"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "concurrently": "8.2.2",
    "npm-run-all": "4.1.5",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.13",
    "wait-on": "7.2.0"
  }
}
